<h1>dashboard</h1>
<form class="new-post-form">
  <div class="form-group">
    <label for="exampleInputtextarea1">Title</label>
    <input type="text" class="form-control" id="title" placeholder="mvc">
  </div>
  <div class="form-group">
    <label for="exampleInputtextarea2">content</label>
    <textarea class="form-control" id="description" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

  {{#if blogpost.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each blogpost as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete" post-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/addpost.js"></script>