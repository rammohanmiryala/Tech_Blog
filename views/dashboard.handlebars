<h1>dashboard</h1>
<div class="container style">
  <button type="submit" class="btn postbutton" onclick="showtextbox()">+Newpost</button>
  <div>
    <form class="container new-post-form" id="hidediv" style="display:none;">
      <div class="form-group">
        <label for="exampleInputtextarea1">Title</label>
        <input type="text" class="form-control" id="title" placeholder="mvc">
      </div>
      <div class="form-group">
        <label for="exampleInputtextarea2">content</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
  </div>
</div>
{{!-- /blogpost/{{blogpost.id}} --}}
<div class="container">
  {{#each blogposts as |blogpost|}}
  <a href="" onclick="posttextbox()">
    <div class="row blogpost">
      <div class=" col title ">
        {{blogpost.title}}
      </div>
      <div class=" col-lg-6 title ">
      </div>
      <div class=" col justify-content-end title">
        {{ format_date blogpost.date_created}}
        {{blogpost.user.fullname}}
      </div>
      <div class="col-12 description">
        {{blogpost.description}}
      </div>
    </div>
  </a>
  <div class="form-group" id="textdiv" style="display:none;">
    <div>
      <label for="exampleFormControlTextarea1"></label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-sm updatebutton">Update</button>
      <button class="btn btn-sm btn-danger" post-id="{{blogpost.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}

</div>



